{% extends 'base.twig' %}
{% block tmp_slide %}

    <!-- SLIDER -->
    {# Si Slider existe#}

        {# Carousel #}
        <div id="carouselExampleIndicators" class="url4 hmax80vh carousel row slide d-none d-md-block" data-ride="carousel">
            <div class="carousel-inner toile">
                <!-- IMAGES 1265 X 550 -->
                {# img d'amorce#}
                <div class="carousel-item slider-adapt-parent active m-a">
                    <img class="d-block m-a hmax80vh wmax-50 slider-adapt" src="{{ post.thumbnail.src }}" alt="Fifth slide">
                    <div class="m-a caption3 caption-hover mce-active carousel-caption wmax-20 mce-active d-none d-md-block t4">
                        <p class=" m-a h-20vh t-a-center white ">
                            {# titre de l'atelier/stage #}
                            <span class="color8">{{ post.get_field('sub')|capitalize }}</span>
                        </p>
                    </div>
                </div>
                {# boucle post_type#}
                {% if actus %}
                    {% for actu in actus %}
                        {# item de défilement #}
                        <div class="carousel-item slider-adapt-parent toile m-a">
                            {# lien vers la page d'archive #}
                            <a href="{{ actu.link }}" class="m-a">
                                {#image#}
                                <img class="d-block m-a hmax80vh slider-adapt" src="{{ actu.thumbnail.src }}" alt="{{ actu.title }} slide">
                                {# 1er bloc titre (disparait au survol #}
                                <div class="m-a caption2 color8 caption-hover mce-active carousel-caption wmax-20 mce-active d-none d-md-block t4">
                                    <p class=" m-a h-20vh t-a-center white ">
                                        {# titre de l'atelier/stage #}
                                        <span class="color8">{{ actu.title|capitalize}}</span>
                                    </p>
                                </div>
                            </a>
                        </div>
                        
                    {% endfor %}
                    <div class="l-2  caption6 mce-active carousel-caption hmax60vh w-20 mce-active d-none d-md-block t4">
                        {# Nom #}
                        <h1 class=" m-a h-20vh t-a-center white t-md-8">
                            {{ 'sylvia trouvé '|capitalize }}
                        </h1>
                        {#sub#}
                        
                        <h2 class="color8 mt30 t-md-6 m-a t-a-center">
                            le fil
                        </h2>
                        {# vers ancres suivantes #}
                        <a href="{% if stages %} #stage-1 {% else %} #article-anch2 {% endif %}" class="col-12 anch">
                            <div class="button button-h t-a-center mt30">
                                <span class="white"><i class="fas fa-chevron-down"></i></span>
                            </div>
                        </a>
                    </div>  
                   
                {% endif %}
            </div>

            <!-- BOUTONS -->
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>
{% endblock %}
{% block content %}
    {# --------------------------   section 1 : texte--------------------------------------------#}
    <a id="article-anch" class="anch col-md-12 d-none d-md-block"></a>
    <article id="post-id" class="container-fluid row">
        {# <h1 class="title-red t-a-center col-md-1 col-12  vertical-h1 m-a white">
            <span class="white t4 ">
                {{post.title }}
            </span>
        </h1>
        <div class="offset-md-1 d-none d-md-block"></div>
        <section class="section col-12 col-md-4 row">
            <div class="col-12 t3 col-md-12 toile mt-20">
                <a href="{{ post.thumbnail.src }}">
                    <img src="{{ post.thumbnail.src }}" alt="photo de {{ site.url }}" class="wmax-80 img">
                </a>
            </div>
        </section> #}
        {# <aside class="row col-12 col-md-5">
            <h2 class="title-red t-a-center col-12 hmax40vh t4 m-a color8">
                {{ post.get_field('sub') }}

                
            </h2>
            <p class="col-12 toile">
                {{ post.get_field('texte') }}
                {% if post.get_field('auteur') %}
                    <i class="title-red white hmax30vh t2 mt-10 caption2"> {{ post.get_field('auteur') }} </i>
                {% endif %}
            </p>
        </aside> #}
        {# --------------------------   section 3 : Actus --------------------------------------------#}
        {% for actu in actus %}
                <a id="article-anch{{ loop.index + 1 }}" class=" d-none d-md-block"></a>
                <section class="row col-12">
                    {#titre vertical#}
                    <h1 class="title-red  col-md-1 col-12  vertical-h1 white mr60">
                        <span class="white t4 ">
                            {{ post.title }}
                        </span>
                    </h1>
                    {# si loop.index impair #}
                    {% if loop.index%2 != 0 %}
                        <a href="{{ actu.link }}" class="row">
                            <div class="col-12 col-md-4 t3 toile mt-20 mr60">
                                <img src="{{  actu.thumbnail.src }}" alt="photo de {{ site.url }}/lactu" class="wmax-100 shadow hmax50vh m-a img">
                                <div class="d-flex justify-content-around mt30">
                                    <div class="vertical-span white t3 toile">
                                        <h3 class="map-anch white p20 bk3 vertical-strong-red article-h3 t3 white t-a-center">
                                            <a href="{{ actu.link }}" class=" col-12 toile row">
                                                <span class="color8 mr10">{{  actu.title }}</span>
                                            </a>
                                        </h3>
                                    </div>
                                </div>
                            </div>
                            <div class="row col-12 col-md-4 ">
                                <p class="toile mt-20 ">
                                    {{  actu.get_field('edito') }}
                                </p>
                                <h2 class="t-a-center hmax50vh t4 color8 m-a">
                                    <a href="#article-anch{{ loop.index+2 }}" class="anch">
                                        <div class="button button-h t-a-center mt30">
                                            <span class="color4"><i class="fas fa-chevron-down"></i></span>
                                        </div>
                                    </a>
                                </h2>
                            </div>
                             {% if actu.get_field('video-booleen') == '1'%}
                                <div class="col-8 m-a mt40">
                                    {{actu.get_field('lien_dintegration')}}
                                </div>
                            {% endif %} 
                        </a>
                    {% else %}
                        <a href="{{ actu.link }}" class="row">
                            <div class="row col-12 col-md-4 ">
                                <p class="toile mt-20 mr">
                                    {{  actu.get_field('edito') }}
                                </p>
                                <h2 class="t-a-center hmax50vh t4 color8 m-a">
                                    <a href="
                                        {% if loop.index != loop.last %}
                                        #article-anch{{ loop.index + 2 }}
                                        {% else %}
                                        #article-contact
                                        {% endif %}"
                                    class="col-12 anch">
                                        <div class="button button-h t-a-center mt30">
                                            <p class="color3"><i class="fas fa-chevron-down"></i></p>
                                        </div>
                                    </a>
                                </h2>
                            </div>
                            <div class="col-12 col-md-4 t3 toile mt-20">
                                <img src="{{  actu.thumbnail.src }}" alt="photo de {{ site.url }}/lactu" class="wmax-100 shadow hmax50vh m-a img">
                                <div class="d-flex justify-content-around mt30">
                                    <div class="vertical-span white t3 toile">
                                        <h3 class="map-anch white p20 bk3 vertical-strong-red article-h3 t3 white t-a-center">
                                            <a href="{{ actu.link }}" class=" col-12 toile row">
                                                <span class="color8 mr10">{{  actu.title }}</span>
                                            </a>
                                        </h3>
                                    </div>
                                </div>
                                
                            </div>
                            {% if actu.get_field('video-booleen') == '1'%}
                                <div class="col-8 m-a mt40">
                                    {{actu.get_field('lien_dintegration')}}
                                </div>
                            {% endif %} 
                        </a>
                    {% endif %}
                  
                    <h2 class="title-red t-a-center col-md-1 col-12 vertical-h1 white">
                        <a href="{{ site.link }}" class="white t4 ">
                            {{'sylviatrouve.com' }}
                        </a>
                    </h2>
                    <div class="offset-md-2 d-none d-md-block"></div>
                   
                </section>

        {% endfor %}
{# ------------------------       BLOC CONTACTS         --------------------------#}
        {# Si contacts #}
        {% if contacts %}
            <a id="article-contact" class="anch col-md-12 d-none d-md-block"></a>
            <h2 class="title-red col-md-1 col-12 vertical-h1 white">
                {{'contact'|upper }}
            </h2>
            <section class="col-md-9 row d-md-flex ">
                {% include 'views/partial/sections/contact-via.twig' %}
            </section>
             {% include 'views/partial/domain-column.twig' %}  
        {% endif %}

    </article>
{% endblock %}